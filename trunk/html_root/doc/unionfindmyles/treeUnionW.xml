<?xml version="1.0"?>
<pseudocode>
    <program_listing>
	<signature>treeUnion(Array list, Array weights, set1, set2)</signature>
	<line line_number="1">1   if(weights[set1] >= weights[set2])</line>
	<line line_number="2">2      list[set2] = set1</line>
	<line line_number="3">3      weights[set1] += weights[set2]</line>
	<line line_number="4">4      weights[set2] = 0</line>
	<line line_number="5">5   else</line>
	<line line_number="6">6      list[set1] = set2</line>
	<line line_number="7">7      weights[set2] += weights[set1]</line>
	<line line_number="8">8      weights[set1] = 0</line>
    </program_listing>
    <variables>
        <variable>set1 = <replace var="set1" /></variable>
	<variable>set2 = <replace var="set2" /></variable>
    </variables>
</pseudocode>